<Window x:Class="Magpie.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Magpie.ViewModels"
        Title="Update Available"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance d:Type=viewModels:MainWindowViewModel}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding ReleaseNotes}" />
        <DockPanel Grid.Row="1"
                   HorizontalAlignment="Stretch"
                   LastChildFill="False">
            <Button Command="{Binding SkipThisVersionCommand}"
                    Content="Skip This Version"
                    DockPanel.Dock="Left" />
            <Button HorizontalAlignment="Right"
                    Command="{Binding ContinueUpdateCommand}"
                    Content="Update"
                    DockPanel.Dock="Right" />
            <Button HorizontalAlignment="Right"
                    Command="{Binding RemindMeLaterCommand}"
                    Content="Remind Me Later"
                    DockPanel.Dock="Right" />
        </DockPanel>
    </Grid>
</Window>
